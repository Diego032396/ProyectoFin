<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFin.Views.UsuarioForm"
             Title="Formulario de Usuario Nuevo">
    <Grid Padding="20"
  RowDefinitions="Auto, Auto, Auto, Auto, Auto"
  ColumnDefinitions="*, *">
        <Label Text="" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand" />
        <Label Text="User" Grid.Row="1" />
        <Entry x:Name="txtUser" Placeholder="User" Grid.Row="1" Grid.Column="1" />
        <Label Text="Email" Grid.Row="2" />
        <Entry x:Name="txtEmail" Placeholder="Email" Grid.Row="2" Grid.Column="1" />
        <Label Text="Password" Grid.Row="3" />
        <Entry x:Name="txtPassword" IsPassword="true" Placeholder="Password" Grid.Row="3" Grid.Column="1" />
        <Button x:Name="btnRegistrarForm" Text="Guardar" Grid.Row="4" Grid.ColumnSpan="2" BackgroundColor="LightBlue" Clicked="btnRegistrarForm_Clicked" />
    </Grid>
</ContentPage>